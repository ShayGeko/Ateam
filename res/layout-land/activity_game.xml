<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="enon.hfad.com.ateam.game">

    <ImageView
        app:srcCompat="@drawable/plane"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/plane"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:visibility="invisible"/>

    <TextView
        android:text="money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_money"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dwarf1"
        android:layout_marginTop="22dp"
        android:id="@+id/dwarf_image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dwarf2"
        android:layout_marginTop="22dp"
        android:id="@+id/dwarf_image2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dwarf3"
        android:layout_marginTop="22dp"
        android:id="@+id/dwarf_image3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dwarf4"
        android:layout_marginTop="22dp"
        android:id="@+id/dwarf_image4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dwarf5"
        android:layout_marginTop="22dp"
        android:id="@+id/dwarf_image5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <ImageView
        app:srcCompat="@drawable/wall"
        android:id="@+id/wall1"
        android:layout_width="15dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/plane"
        android:layout_toEndOf="@+id/plane"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:visibility="invisible"/>

    <ImageView
        app:srcCompat="@drawable/wall"
        android:id="@+id/wall2"
        android:layout_width="15dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/wall"
        android:layout_toRightOf="@+id/wall"
        android:layout_toEndOf="@+id/wall"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="12dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ready_image"
        android:id="@+id/ready_image"

        android:visibility="invisible"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/wall"
        android:id="@+id/wall3"
        android:layout_width="15dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wall2"
        android:layout_toEndOf="@+id/wall2"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:visibility="invisible"/>

    <ImageView
        app:srcCompat="@drawable/wall"
        android:id="@+id/wall4"
        android:layout_width="15dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/plane"
        android:layout_alignEnd="@+id/plane"
        android:visibility="invisible"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_money"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:id="@+id/textview_pos" />

    <ImageButton
        app:srcCompat="@drawable/pause_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pause_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="pause_clicked" />

    <ImageButton
        app:srcCompat="@drawable/play_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/play_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:onClick="play_clicked" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next_level_button"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="INVISIBLE" />

</RelativeLayout>